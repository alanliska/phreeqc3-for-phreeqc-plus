DATABASE ../database/phreeqc.dat
SELECTED_OUTPUT 101
    -file                 surf_related_101.sel
USER_PUNCH 101
    -headings Mu SC
    -start
10 x = MU
20 GOSUB 1000
30 PUNCH STR_F$(round, 12, 9)
110 x = SC
120 GOSUB 1000
130 PUNCH STR_F$(round, 12, 3)
999 END
1000 REM Rounding function 
1010 str_exp$ = STR_E$(x, 10, 3)
1020 round = VAL(str_exp$)
1040 RETURN
    -end
knobs
	-log
# test removing all of surface
solution 1
equilibrium_phases 1-2
	goethite	0.0	0.01
save solution 1-2
end
reaction 1
	HCl	1.0
	0.25	moles
surface 1-2
	Hfo_sOH	goethite	0.01	50000.
	Hfo_wOH	goethite	0.1	50000.
	-eq	solution 1
use solution 1
use equilibrium_phases 1
use reaction 1
use surface 1
save solution 2
save equilibrium_phases 2
save surface 2
end
use solution 2
use equilibrium_phases 2
use surface 2
end
# test starting with no surface
solution 1
equilibrium_phases 1
	goethite	0.0	0.0
reaction 1
	FeCl3	1.0
	0.25	moles
surface 1
	Hfo_sOH	goethite	0.01	50000
	Hfo_wOH	goethite	0.1	50000
	-eq	solution 1
end
# test removing all of surface, diffuse layer
solution 1
equilibrium_phases 1-2
	goethite	0.0	0.01
save solution 1-2
end
reaction 1
	HCl	1.0
	0.25	moles
SURFACE 1-2
	-diff
	Hfo_sOH	goethite	0.01	50000
	Hfo_wOH	goethite	0.1	50000
	-eq	solution 1
use solution 1
use equilibrium_phases 1
use reaction 1
use surface 1
save solution 2
save equilibrium_phases 2
save surface 2
# test saving, diffuse_layer
end
use solution 2
use equilibrium_phases 2
use surface 2
end
# test starting with no surface, diffuse_layer
